   <div id="cards"> 
                {{#each content}}
<div class="container">
 <div class="card text-center" style="background-color: #e3f2fd;;border:solid 1px">
<a href="/message" class="btn btn-primary" id="chat-button"> Chat</a>
        <div class="card-body">
            <p class="card-text">
            <h5>{{user_name}}</h5>
            <li id="zipCode">Zipcode: {{{ zip_code }}}</li>
            {{#if test_seeking}}
            <li>Looking for Tests: {{{ tests_seeking }}}</li>
            {{else}}
            <li>Tests Available: {{{ tests_available }}}</li>
            {{/if}}
            <li>Comments: {{ post_comment }}</li>
            <li>Contact me at: {{ contact_me }}</li>
            </p>
        </div>
<div class="col-md-4">
        <button class="btn btn-sm btn-danger delete-form" data-id="{{id}}">DELETE</button>
      </div>
    </div>
</div>
        {{/each}}
</div>
